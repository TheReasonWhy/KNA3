NAME = wolf3d
CC = gcc
FLAGS = -Wall -Wextra -Werror
COMP = $(CC) $(FLAGS)
WOLF3D_H = -I ./
FRAMEWORK = -framework OpenGL \
			-framework AppKit
LIBFT_H = -I ./libft/
LIBS = -L./libft -lft \
	   -lmlx
SRC = wolf3d.c \
	key_event.c

OBJ := $(SRC:%.c=%.o)

all: $(NAME)

makelibft:
	make -C ./libft

$(NAME): makelibft $(OBJ)
	$(COMP) $(OBJ) $(LIBS) -o $(NAME) $(FRAMEWORK)

%.o: %.c
	$(COMP) -c $< $(LIBFT_H) $(WOLF3D_H) -o $@

clean: 
	rm -f $(OBJ)
	make -C libft/ clean

fclean: clean
	rm -f $(NAME)
	make -C libft/ fclean

re: fclean all