
















# link objects
link:
	$(CC) $(OBJECTS) $(LFLAGS) -o rayCaster.out

clean:
	rm -rf *.o *.out

# compile individual files
main.o: $(SRC)main.cpp
	$(CC) $(CFLAGS) $(SRC)main.cpp -o $(BUILD)main.o $(IFLAGS)

# compile InstantCG as an .o file
instantcg.o:
	$(CC) $(CFLAGS) $(SRC)instantcg.cpp -o $(BUILD)instantcg.o $(IFLAGS)
